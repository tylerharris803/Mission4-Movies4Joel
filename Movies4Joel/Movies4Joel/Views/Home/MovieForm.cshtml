
@{
    ViewData["Title"] = "Movies";
}

@model Movies4Joel.Models.ApplicationResponse

<div class="text-center">
    <h1 class="display-4">Add Movies</h1>
    <br />
    <p> Feel free to edit add movies to the collection by filling out and submitting a form below</p>
    <br />
    <form method="post">
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" /><br />

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">LentTo: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes: </label>
        <input maxLength="25" asp-for="Notes" /><br />
        <p>Limit "Notes" to 25 character or less.</p>

        <button type="submit">Add Movie</button>
    </form>
</div>